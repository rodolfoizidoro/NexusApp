    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCamera"
        android:layout_alignTop="@+id/btnFinalizarVideo"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_camera_alt_cyan_a400_36dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btnFinalizarVideo"
        android:background="@drawable/ic_videocam_off_red_500_48dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnServidor" />
    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btnServidor"
        android:background="@drawable/ic_videocam_red_500_48dp"
        android:padding="15dp"
        android:layout_alignTop="@+id/btnFinalizarVideo"
        android:layout_toEndOf="@+id/btnConectar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFrente"
        android:elevation="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_keyboard_arrow_up_red_500_48dp"
        android:layout_above="@+id/btnStop"
        android:layout_toEndOf="@+id/btnEsquerda" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStop"
        android:visibility="invisible"
        android:src="@drawable/ic_cancel_red_500_48dp"
        android:elevation="@dimen/activity_vertical_margin"
        android:layout_above="@+id/btnVoltar"
        android:layout_toEndOf="@+id/btnEsquerda" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDireita"
        android:layout_alignBottom="@+id/btnStop"
        android:elevation="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@+id/btnStop"
        android:src="@drawable/ic_keyboard_arrow_right_red_500_48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoltar"
        android:elevation="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_keyboard_arrow_down_red_500_48dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnEsquerda" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/activity_vertical_margin"
        android:id="@+id/btnEsquerda"
        android:src="@drawable/ic_keyboard_arrow_left_red_500_48dp"
        android:layout_alignTop="@+id/btnStop"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btnVelocidade1"
        android:background="@drawable/ic_signal_cellular_1_bar_deep_purple_900_36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btnVelocidade3"
        android:background="@drawable/ic_signal_cellular_3_bar_deep_purple_900_36dp"
        android:layout_alignTop="@+id/btnVelocidade1"
        android:layout_toEndOf="@+id/btnVelocidade1" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btnvelocidade4"
        android:background="@drawable/ic_signal_cellular_4_bar_deep_purple_900_36dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnVelocidade3" />

    <Button
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/btnAlterarCameraRemoto"
        android:background="@drawable/ic_3d_rotation_cyan_600_36dp"
        android:layout_below="@+id/btnCamera"
        android:layout_alignEnd="@+id/btnCamera" />
    <RelativeLayout
        android:id="@+id/subscriberview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:keepScreenOn="true">

        <ProgressBar
            android:id="@+id/loadingSpinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:visibility="gone" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/publisherview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:keepScreenOn="true">
    </RelativeLayout>

</RelativeLayout>
