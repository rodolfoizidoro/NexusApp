<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llmagens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_bluetooth_cyan_a400_36dp"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_bluetooth_cyan_a400_36dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llRadio"
        android:layout_below="@id/llmagens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <RadioGroup
           android:id="@+id/RadioGroup"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="50dp"
           android:orientation="horizontal"
           >
           <RadioButton
               android:id="@+id/cliente"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="0.5"
               android:text="Cliente "
               />

           <RadioButton
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="0.5"
               android:text="Controlador "
               android:id="@+id/controler" />
       </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/llRadio"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnconfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"

            android:text="Confirmar"
            />

    </LinearLayout>


</RelativeLayout>